<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="50dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/modified_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:hint="id"/>
        <EditText
            android:id="@+id/modified_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:hint="name"/>
        <EditText
            android:id="@+id/modified_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:hint="destination"/>
        <EditText
            android:id="@+id/modified_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:hint="weight"/>
        <EditText
            android:id="@+id/modified_pellet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:hint="pellet"/>
        <EditText
            android:id="@+id/modified_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:hint="discription"/>

        <Button
            android:id="@+id/modified_save"
            android:layout_width="265dp"
            android:layout_height="5dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:text="save" />
        <Button
            android:id="@+id/modified_back"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content"
            android:text="back"/>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
